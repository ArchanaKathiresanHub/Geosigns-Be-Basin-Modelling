# Make.hdf5 - contains definitions for HDF5 3rd party library
#
#

#
# Definitions for the base directory location for optimized or debug 
#   compiled include files and libraries
#
ifeq ($(BOPT),O_c++)
  HDF5_SBASE = $(HDF5_HOME)
  HDF5_PBASE = $(HDF5_P_HOME)

else
  HDF5_SBASE = $(HDF5_D_HOME)
  HDF5_PBASE = $(HDF5_PD_HOME)

endif

#
# HDF5 definitions
#

#   Serial 
HDF5_SINCLUDE = $(HDF5_SBASE)/include
HDF5_SLIB     = $(HDF5_SBASE)/lib

#   Parallel 
HDF5_PINCLUDE = $(HDF5_PBASE)/include
HDF5_PLIB     = $(HDF5_PBASE)/lib

#   Default, is parallel
HDF5LIB       = $(HDF5_PLIB)
HDF5INCLUDE   = $(HDF5_PINCLUDE)

# End 
