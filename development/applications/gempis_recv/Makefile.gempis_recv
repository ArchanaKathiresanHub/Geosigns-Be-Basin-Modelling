ROOTDIR	= ..
LIBDIR = ../../../libraries

FILE_BASE = ../../../files
include $(FILE_BASE)/Make.targets

MAKEDEPEND = /usr/bin/X11/makedepend

SRCDIR  	= $(ROOTDIR)/src

vpath %.h $(SRCDIR)
vpath %.C $(SRCDIR)

OBJDIR		= .
vpath %.o $(OBJDIR)

OBJECTS = gempis_recv.o

EXE = gempis_recv

target: $(EXE)

$(EXE) : $(OBJECTS) Makefile
	$(LCC) $(CFLAGS) -lpthread -lrt $(OBJECTS) -o $(EXE)

clean :
	rm -rf $(EXE) *~

depend: $(EXEOBJECTS:.o=.C)

